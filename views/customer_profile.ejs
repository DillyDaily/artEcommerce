	<body>

		<nav id="cp-main-nav" role="navigation">
			<a href="#" class="js-cp-nav-toggle cp-nav-toggle active"><i></i></a>
			<div class="js-fullheight cp-table">
				<div class="cp-table-cell js-fullheight">
					<ul>
						<li><a href="/">Home</a></li>
						<li><a href="/product">Product</a></li>
						<li><a href="/about">About</a></li>
						<li><a href="/contact">Contact</a></li>
						<% if (isLogged){ %>
						<li><a href="/customer_profile">Customer Profile</a></li>
						<% }else{%>
						<li><a href="/register_login">Register/Login</a></li>
						<% } %>
						<li><a href="/cart">Shopping Cart</a></li>
					</ul>
					<p class="cp-social-icon">
						<a href="#"><i class="icon-twitter2"></i></a>
